{
    "include": ["src"],
    "compilerOptions": {
        "target": "es2021",
        "lib": ["es2021"],
        "resolveJsonModule": true,
        "types": ["@moddota/panorama-types"],
        "moduleResolution": "node",
        "strict": true,
        "preserveSymlinks": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
    }
}
