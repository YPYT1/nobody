<root>
    <scripts>
        <include src="./script.tsx" />
    </scripts>
    <styles>
        <include src="./../_styles/keyframes.less" />
        <include src="./../_styles/styles.less" />
        <include src="./styles.less" />
    </styles>
    <snippets>
        <snippet name="ItemRune">
            <Panel class="ItemRune">
                <Panel id="RuneImage">
                    <Image id="RuneIcon" />
                    <Panel id="RuneCount" >
                        <Label text="{s:rune_count}"/>
                    </Panel>
                    
                </Panel>
                <Panel id="RuneName">
                    <Label text="{s:rune_name}"/>
                </Panel>
                <Panel id="RuneDesc">
                    <Label text="{s:rune_desc}"/>
                </Panel>
            </Panel>
        </snippet>
        <snippet name="BuffBorder">
            <Button class="BuffBorder">
                <Image id="BuffImage" scaling='stretch-to-fit-y-preserve-aspect'/>
                <Label id="StackCount" text="{s:stack_count}" />
                <Panel id="CircularDuration" />
            </Button>
        </snippet>
    </snippets>
    <Panel class="root" hittest="false" />
</root>
