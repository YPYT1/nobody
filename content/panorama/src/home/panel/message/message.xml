<root>
	<styles>
		<include src="./message.less" />
        <include src="./../../../_styles/styles.less" />
        <include src="./../../../_styles/keyframes.less" />
	</styles>
	<scripts>
		<include src="./message.tsx" />
	</scripts>
    <snippets>
        <snippet name="MessageEventItem">
            <Panel class="MessageEventItem" hittest="false">
                <Panel id="EventIcon" hittest="false" />
                <Panel id="EventType" hittest="false">
                    <Label text="{s:event_type}"/>
                </Panel>
                <Panel id="EventLabel" hittest="false">
                    <Label text="{s:event_label}" html="true" hittest="false"/>
                </Panel>
            </Panel>
        </snippet>
    </snippets>
	<Panel class="message" hittest="false">
        <Panel id="TopCountdownMessage" hittest="false">
            <Panel id="Timer" >
                <Label text="{s:timer_label}"/>
                <Panel class="TimerImage"/>
            </Panel>
        </Panel>
		<Panel id="CommonMessage" class='BottomToTopMessagePanel' hittest="false">
            <Panel id="CommonManager" class='ManagerList' hittest="false" />
        </Panel>
        <Panel id="BossWarningPanel" hittest="false">
            <Panel id="NormalBossWarning"/>
        </Panel>
        <Panel id="EventWarning" hittest="false">
            <Panel id="101" class="EventMessageRows"/>
            <Panel id="102" class="EventMessageRows"/>
            <Panel id="103" class="EventMessageRows"/>
            <Panel id="104" class="EventMessageRows"/>
            <Panel id="105" class="EventMessageRows"/>
            <Panel id="106" class="EventMessageRows"/>
        </Panel>
	</Panel>
</root>