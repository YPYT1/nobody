<root>
	<styles>
		<include src="./ability_upgrade.less" />
		<include src="./../../../_styles/styles.less" /> 
	</styles>
	<scripts>
		<include src="./ability_upgrade.tsx" />
	</scripts>
    <snippets>
        <snippet name="TalentInfo">
            <Panel class="TalentInfo" antialias="true">
                <Panel class="BtnHover"/>
                <Button id="TalentNodeButton">
                    <Image id="TalentIcon" hittest="false"/>
                    <Panel class="AbilityNamePanel">
                        <Label class="Name" text="{s:talent_name}"/>
                        <Label class="Level" text="({d:uc}/{d:max})"/>
                    </Panel>
                    <Panel id="TalentExtra" class="TalentExtraInfo">
                        <Panel id="ExtraElement">
                            <Panel class="NewIcon" />
                        </Panel>
                            <Label id="TypesLabel" class="TypeLabel" text="{s:type_label}"/>
                    </Panel>
                    <Panel class="AbilityDescription">
                        <Label text="{s:AbilityDescription}" html="true"/>
                    </Panel>
                    <Panel class="SoulInvestDescription">
                        <Label class="Title" text="#custom_text_soul_invest_Description" html="true"/>
                        <Label class="DescEx1" text="#custom_text_soul_invest_ex1" html="true"/>
                        <Panel class="Arrow"/>
                        <Label class="DescEx2" text="#custom_text_soul_invest_ex2" html="true"/>
                    </Panel>
                    <Panel id="ChildNodeHeader">
                        <Panel class="SplitLine" />
                        <Label text="下级分支"/>
                        <Panel class="BranchLineAndPoint">
                            <Panel class="Point"/>
                        </Panel>
                        <Panel id="ChildNodeList" />
                    </Panel>
                </Button>
                <Panel class="TalentParentAbility" hittest="false" >
                    <!-- <Panel class="TalentStateLabel" /> -->
                    <Image id="ParentAbilityPanel" />
                </Panel>
                <Panel class="CooldownAndManacost">
                    <Panel class="CooldownPanel">
                        <Panel class="Icon Cooldown"/>
                        <Label text="{d:cooldown}"/>
                    </Panel>
                    <Panel class="ManacostPanel">
                        <Panel class="Icon Mana"/>
                        <Label text="{d:manacost}"/>
                    </Panel>
                </Panel>
            </Panel>
		</snippet>
        <snippet name="ChildTalentNode">
			<Panel class="ChildTalentNode">
				<Panel class="HorLine"/>
				<Panel class="Line"/>
				<Image id="ChildTalentIcon"/>
			</Panel>
		</snippet>
    </snippets>
    <Panel class="root">
        <Panel id="SelectList"/>
    </Panel>
</root>