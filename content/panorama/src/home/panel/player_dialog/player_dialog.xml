<root>
	<styles>
		<include src="./player_dialog.less" />
		<include src="./../../../_styles/styles.less" /> 
	</styles>
	<scripts>
		<include src="./player_dialog.tsx" />
	</scripts>

	<snippets>
		<snippet name="PlayerRevivePanel">
			<Panel class="PlayerRevivePanel">
				<Panel class="ReviveLabels">
					<Label class="Label" text="复活中:"/>
					<Label class="Time" text="{s:timer}s"/>
				</Panel>
			</Panel>
		</snippet>
		
		<snippet name="RuneAttrRows">
			<Panel class="RuneAttrRows">
				<Label text="{s:rune_attr}" html="true"/>
			</Panel>
		</snippet>
		<snippet name="RuneInfo">
			<Button class="RuneInfo">
				<Panel class="RuneHover" />
				<Panel class="RuneContent">
					<Panel class="RuneHeader">
						<Panel class="SelectHotkey" >
							<Label text="{s:hotkey}" />
						</Panel>
						<Panel id="RuneIconBtn" />
					</Panel>
					<Panel class="RuneName">
						<Panel class="NameDecorate Left"/>	
						<Label text="{s:rune_name}"/>
						<Panel class="NameDecorate Right"/>	
					</Panel>
					<Panel class="RuneDesc">
						<Label text="{s:rune_desc}" html="true"/>
					</Panel>
					<Panel class="RuneAttrSplit" />
					<Panel class="RuneTitle">
						<Panel class="SplitIcon" />
						<Label text="符文属性"/>
						<Panel class="SplitIcon Right" />
					</Panel>
					<Panel class="RuneAttrPanel">
						<Panel id="RuneAttr" />
					</Panel>
				</Panel>
			</Button>
		</snippet>

		<snippet name="HeroState">
			<Panel class="HeroState">
				<Label class="Health" text="{d:hp}/ {d:max_hp}  {d:hp_pct}%"/>
				<Label class="Mana" text="{d:mp}/ {d:max_mp} {d:mp_pct}%" />
				<Label class="Attack" text="{d:attack}" />
			</Panel>
		</snippet>
	</snippets>
	<Panel class="player_dialog">
		<Panel id="PlayerReviveContainer" class="DialogContainer" hittest="false"/>
		<Panel id="PlayerRuneContainer" class="DialogContainer" hittest="false">
			<Panel id="LocalPlayerRuneDialog" hittest="false">
				<Panel class="Header">
					<Label class="SelectCountdownTimer" text="{d:select_timer}s"/>
				</Panel>
				<Panel class="Content">
					<Panel class="RuneSelectBg">
						<Panel id="RuneSelectList" />
					</Panel>
					
					<Panel class="RuneOptionBtn">
						<Button id="RefreshBtn" />
						<Panel class="RefreshLabel">
							<Label text="{d:refresh_count}" hittest="false"/>
						</Panel>
						
					</Panel>
				</Panel>
			</Panel>
		</Panel>
		<Panel id="PlayerStateContainer" class="DialogContainer" hittest="false">
			<Panel id="HeroState"/>
		</Panel>
	</Panel>
</root>