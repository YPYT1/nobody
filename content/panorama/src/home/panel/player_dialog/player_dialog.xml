<root>
	<styles>
		<include src="./player_dialog.less" />
		<include src="./../../../_styles/styles.less" /> 
	</styles>
	<scripts>
		<include src="./player_dialog.tsx" />
	</scripts>

	<snippets>
		<snippet name="PlayerRevivePanel">
			<Panel class="PlayerRevivePanel">
				<Panel class="ReviveLabels">
					<Label class="Label" text="#复活中:"/>
					<Label class="Time" text="{s:timer}s"/>
				</Panel>
			</Panel>
		</snippet>
		
		<snippet name="RuneInfo">
			<Panel class="RuneInfo">
				<Button id="RuneIconBtn">
					<Image id="RuneImage" src="" />
				</Button>
				<Panel class="RuneDesc">
					<Label text="{s:rune_desc}"/>
				</Panel>
			</Panel>
		</snippet>
	</snippets>
	<Panel class="player_dialog">
		<Panel id="PlayerReviveContainer" class="DialogContainer" hittest="false"/>
		<Panel id="PlayerRuneContainer" class="DialogContainer" hittest="false">
			<Panel id="LocalPlayerRuneDialog" hittest="false">
				<Panel id="RuneSelectList" />
				<Label class="SelectCountdownTimer" text="{d:select_timer}s"/>
				<Panel class="RuneOptionBtn">
					<Button id="RefreshBtn" />
					<Label text="{d:refresh_count}" hittest="false"/>
				</Panel>
			</Panel>
			
		</Panel>
	</Panel>
</root>