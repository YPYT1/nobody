<root>
	<styles>
		<include src="./control.less" />
		<include src="./../../../_styles/styles.less" />
	</styles>
	<scripts>
		<include src="./control.tsx" />
	</scripts>
	<snippets>
		<snippet name="HudAttributeRow">
			<Panel class='HudAttributeRow'>
				<Panel class='StatIcon' />
				<Label class='AttributeValue' text="{s:attr_value}" />
			</Panel>
		</snippet>
		<snippet name="ValueBarComponent">
			<Panel class="ValueBarComponent" hittest="false">
				<Panel class='ProgressBarPanel'>
					<Panel id="ValueProgressBarBackground" />
					<ProgressBar id="ValueProgressBar" class='ProgressBar' value="0" min="0" max="100" hittest="false"/>
				</Panel>
				<Panel class='BarLabel' hittest="false">
					<Label class="Label" text="{s:value}/{s:max_value}" hittest="false" />
				</Panel>
			</Panel>
		</snippet>
		<snippet name="ArmsAbilityRow">
			<Button class="ArmsAbilityRow">
				<DOTAAbilityImage id="ImageIcon" showtooltip="true"/>
			</Button>
		</snippet>
		<snippet name="BuffBorder">
            <Button class="BuffBorder">
                <Image id="BuffImage" scaling='stretch-to-fit-y-preserve-aspect'/>
                <Label id="StackCount" text="{s:stack_count}" />
                <Panel id="CircularDuration" />
            </Button>
        </snippet>
		<snippet name="AbilityTreePanel">
			<Button class="AbilityTreePanel" hittest="false">
				<Panel class="AbilityUpBg" hittest="false">
					<Panel class="" hittest="false"/>
				</Panel>
				<Panel id="TalentList" hittest="false"/>
			</Button>
		</snippet>
		<snippet name="TalentInfo">
			
				<Panel class="TalentInfo" antialias="true">
					<Panel class="BtnHover"/>
					<Button id="TalentNodeButton">
						<Image id="TalentIcon" hittest="false"/>
						<Panel class="AbilityNamePanel">
							<Label class="Name" text="{s:talent_name}"/>
							<Label class="Level" text="({d:uc}/{d:max})"/>
						</Panel>
						<Panel id="TalentExtra" class="TalentExtraInfo">
							<Panel id="ExtraElement">
								<Panel class="NewIcon" />
							</Panel>
								<Label id="TypesLabel" class="TypeLabel" text="{s:type_label}"/>
						</Panel>
						<Panel class="AbilityDescription">
							<Label text="{s:AbilityDescription}" html="true"/>
						</Panel>
						<Panel class="SplitLine" />
						<Panel class="ChildNodeHeader">
							<Label text="下级分支"/>
							<Panel class="BranchLineAndPoint">
								<Panel class="Point"/>
							</Panel>
							<Panel id="ChildNodeList" />
						</Panel>
					</Button>
				</Panel>
		
			
		</snippet>
		<snippet name="PanelAttributeRow">
			<Panel class="PanelAttributeRow">
				<Panel id="StatIcon" class="StatIcon" />
				<Label class="StatLabel" text="{s:stat_label}"/>
				<Label class="StatValue" text="{s:stat_value}"/>
			</Panel>
		</snippet>
		<snippet name="SpaceJump">
			<Panel class="SpaceJump">
				<Panel id="AbilityPanel">
					<Image id='AbilityImage' />
					<Panel class="JumpBorder"/>
					<Panel id="Cooldown" hittest="false">
						<Panel id="CooldownOverlay" hittest="false" />
						<Label id="CooldownTimer" text="{d:cooldown_timer}" hittest="false" />
					</Panel>
					
				</Panel>
				<Panel id="AbilityCharge">
					<Panel class="ChargePoint No1"/>
					<Panel class="ChargePoint No2"/>
					<Panel class="ChargePoint No3"/>
				</Panel>
			</Panel>
		</snippet>
		<snippet name="ChildTalentNode">
			<Panel class="ChildTalentNode">
				<Panel class="HorLine"/>
				<Panel class="Line"/>
				<Image id="ChildTalentIcon"/>
			</Panel>
		</snippet>
	</snippets>
	<Panel class="control">
		<Panel id="BuffContainer">
			<Panel id="DeBuffList" />
			<Panel id="BuffList" />
		</Panel>
		<Button id="PlayerTalentTreeList" />
		<Panel id='CenterStatsContainer' hittest="false" >
            <Panel id="AttributeState">
				<Panel id="UnitLevel">
					<Label class="LevelTitle" text="Lv." />
					<Label class="LevelLabel" text="{d:level}" />
				</Panel>
				<Panel id="UnitAttribute">
					
				</Panel>
			</Panel>
            <Panel id="CenterPanel" hittest="false">
				<Panel id="PortraitContainer" hittest="false">
					<Panel id='PortraitGround' hittest="false" />
					<Panel id='PortraitBorder' hittest="false">
						<DOTAScenePanel 
							id="UnitPortrait" 
							map="maps/custom_scene/hero_portrait" 
							camera='hero_camera' 
							light='light_frontpage' 
							particleonly="false"
							hittest="false"
							deferredalpha="true"
							renderdeferred="true"
						/>
						<Panel class="ReviveCountdown">
							<Label text="99"/>
						</Panel>
						<Button id="HeroInfoBtn" />
					</Panel>
				</Panel>
				<Panel class="HeroAbilityContainer">
					<Panel id="AbilityPoint">
						<Label text="{d:point_count}"/>
					</Panel>
					<Panel id='AbilityList' hittest="false" />
					<Panel id="JumpPanel" class="SpaceJump">
						<Panel id="AbilityPanel">
							<Image id='AbilityImage' />
							<Panel id="Cooldown" hittest="false">
								<Panel id="CooldownOverlay" hittest="false" />
								<Label id="CooldownTimer" text="{s:cooldown_timer}" hittest="false" />
							</Panel>
							<Panel class="JumpBorder"/>
						</Panel>
						<Panel id="AbilityCharge">
							<Panel class="ChargePoint No1"/>
							<Panel class="ChargePoint No2"/>
							<Panel class="ChargePoint No3"/>
						</Panel>
					</Panel>
				</Panel>
            </Panel>
			<Panel id="ExpStatusPanel">
				<Panel id="ExpNumInfo">
					<Label class="XPPercent" text="{s:exp_percent}%"/>
					<Label class="XPValue" text="{s:current_xp} / {s:uplevel_xp}"/>
				</Panel>
				<ProgressBar id='ExpBar' value="0" min="0" max="100">
					<Panel id="DivisionLine">
						<Panel class="Line" />
						<Panel class="Line" />
						<Panel class="Line" />
						<Panel class="Line" />
						<Panel class="Line" />
						<Panel class="Line" />
						<Panel class="Line" />
						<Panel class="Line" />
						<Panel class="Line" />
					</Panel>
				</ProgressBar>
				
			</Panel>
        </Panel>
		<Panel id="HeroAttributeContainer" hittest="false" >
			<Panel class='Header' hittest="false" />
			<Panel class="AttributeContainer" hittest="false" >
				<Panel class="BaseAttribute AttributeCol">
					<Panel class="AttributeHeader" />
					<Panel id="BaseAttributeList" class="AttributeList" />
				</Panel>
				<Panel class="AdvAttribute AttributeCol">
					<Panel class="AttributeHeader" />
					<Panel id="AdvAttributeList" class="AttributeList" / >
				</Panel>
			</Panel>
		</Panel>
		<Panel id="AttributeTooltip">
			<Panel class="Border">
				<Label text="{s:attr_tips}" html="true"/>
			</Panel>
		</Panel>
		<!-- <Panel id="ArmsSelector" class="container">
			<Panel id="ArmsList"></Panel>
            <Panel id="ArmsOption">
                <Button id="ArmsToggleButton" class="btn">
                    <Label text="#切换" />
                </Button>
            </Panel>
		</Panel> -->
	</Panel>
</root>


