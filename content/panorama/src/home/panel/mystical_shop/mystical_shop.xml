<root>
	<styles>
		<include src="./../../../_styles/styles.less" /> 
		<include src="./mystical_shop.less" />
	</styles>
	<scripts>
		<include src="./mystical_shop.tsx" />
	</scripts>
	<snippets>
		<snippet name="ShopItem">
			<Button class="ShopItem" hittest="false">
				<Panel class="ShopItemCard">
					<Panel class="ShopItemInfo">
						<Image id="ItemIcon" />
						<Label class="ItemDesc" text="{s:item_desc}"/>
						<Label class="ItemName" text="{s:item_name}"/>
					</Panel>
					<Panel class="PrivilegeLock" />
				</Panel>
				
				<Panel class="ButtonGroup">
					<Button id="PurchaseBtn">
						<Panel class="Info">
							<Panel class="Icon Soul" />
							<Label class="Price" text="{d:cost}"/>
						</Panel>
					</Button>
					<Button id="RefreshBtn" class="btn">
						<Panel class="Info">
							<Panel class="Icon Soul" />
							<Label class="Price" text="{d:refresh_cost}"/>
						</Panel>
					</Button>
				</Panel>
				
			
			</Button>
		</snippet>
		<snippet name="PlayerShopState">
			<Panel class="PlayerShopState">
				
			</Panel>
		</snippet>
	</snippets>
	<Panel class="mystical_shop" hittest="false">
		<Button id="OpenButton" class="btn"></Button>
		<Panel id="MysticalShop" class="" >
			<Panel class="Header">
				<Button id="ToggleButton"></Button>
			</Panel>
			<Panel class="Container">
				<Panel id="ShopItemList" />
			</Panel>
			<Panel class="Footer">
				<Label id="CountdownTimer" text="{s:countdown_timer}"/>
				<Panel id="PlayerReadyStateList"></Panel>
			</Panel>
		</Panel>
		
	</Panel>
</root>