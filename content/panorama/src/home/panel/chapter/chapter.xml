<root>
	<styles>
		<include src="./chapter.less" />
		<include src="./../../../_styles/styles.less" />
	</styles>
	<scripts>
		<include src="./chapter.tsx" />
	</scripts>
	<snippets>
		<snippet name="ChapterPageInfo">
			<Panel class="ChapterPageInfo" hittest="false">
				<Image id="ChapterPageBg" />
				<Button id="OffsetTest">
					<Label text="{s:offset}"/>
				</Button>
				<Panel class="ChapterInfoContent">
					<Panel id="ChapterLogo" hittest="false"/>
					<Button id="ChapterBpRouteBtn" />
				</Panel>
				
				<Panel id="ChapterList" hittest="false"/>
			</Panel>
		</snippet>

		<snippet name="ChapterSelectBtn">
			<RadioButton class="ChapterSelectBtn" group="ChapterSelectGroup">
				<Panel class="ChapterName">
					<Label text="{s:chapter_name}"/>
				</Panel>
			</RadioButton>
		</snippet>

		<snippet name="DifficultyButton">
			<RadioButton class="DifficultyButton" group="DifficultyButtonGroup">
				<Panel class="DiffNum" />
			</RadioButton>
		</snippet>

		<snippet name="StDropItem">
			<Panel class="StDropItem">
				<Panel id="ServerItem"/>
				<Panel class="StTag" hittest="false">
					<Label text="首通" hittest="false"/>
				</Panel>	
			</Panel>
		</snippet>
	</snippets>
	<Panel class="Chapter" hittest="false">
		<Panel id="ChapterContainer" class="Show" hittest="false">
			<Panel id="ChapterSelect" hittest="false">
				<Panel class="Header" hittest="false">
					<Panel class="Title">
						<Label text="请选择关卡"/>
					</Panel>
				</Panel>
				<Panel class="Body" hittest="false">
					<Panel class="Info" hittest="false">
						<Panel id="ChapterPageList" />
					</Panel>
				</Panel>
				<Panel class="Footer"></Panel>
			</Panel>
			<Panel class="ChapterBorder" hittest="false">
				<Panel class="Body" hittest="false">
					<Button id="LeftBtn" class="TurningPageBtn" />
					<Button id="RightBtn" class="TurningPageBtn" />
				</Panel>
			</Panel>

			<Panel id="ChapterTooltip">
				<Panel class="FloorTexture"/>
				<Panel class="TooltipContent">
					<Panel id="About">
						<Panel class="TitleName">
							<Panel class="NameTextrue Left"/>	
							<Label text="关卡说明"/>
							<Panel class="NameTextrue Right"/>
						</Panel>
						<Panel class="ChapterDesc">
							<Label text="dlasjdsakj福克斯的境况范德萨fjksjkdf福建省咖啡机肯定是fsjklf发送方式"/>
						</Panel>
					</Panel>
					
					<Panel id="DiffInfo" class="TitleName">
						<Panel class="NameTextrue Left"/>	
						<Label text="难度选择"/>
						<Panel class="NameTextrue Right"/>
					</Panel>

					<Panel id="ChapterDiffList"  />
						
					<Panel class="TitleName">
						<Panel class="NameTextrue Left"/>	
						<Label text="掉落信息"/>
						<Panel class="NameTextrue Right"/>
					</Panel>

					<Panel id="DroppedInfoList" />
					
					<Panel id="ChapterOption" class="flow-right">
						<Button id="ChapterConfirmBtn" class="btn">
							<Label text="开始挑战" />
						</Button>
						<Button id="ChapterCancelBtn" class="btn cancel">
							<Label text="还是算了" />
						</Button>
					</Panel>
				
				</Panel>
			</Panel>
		</Panel>
		<Button id="TestToggleBtn" class="btn">
			<Label text="关卡切换页面"/>
		</Button>

	</Panel>
</root>