<root>
	<styles>
		<include src="./talent.less" />
        <include src="./../../../_styles/styles.less" />
	</styles>
	<scripts>
		<include src="./talent.tsx" />
	</scripts>

    <snippets>
        <snippet name="TalentNode">
            <Panel class="TalentNode">
                <Panel class="TalentInfo">
                    <Button id="TalentNodeButton">
                        <Image id="TalentIcon"/>
                    </Button>
                    <Panel class="TalentLabel" hittest="false">
                        <Label class="TalentName" text="{s:talent_name}" hittest="false" />
                        <Label class="TalentState" text="{d:used} / {d:max}" hittest="false"/>
                    </Panel>
                </Panel>
                
                <Panel id="TalentChildNode"/>
            </Panel>
        </snippet>
    </snippets>
	<Panel class="talent">
		<Panel id="TalentContainer">
            <Panel class="Header">
                <Button id="ToggleBtn" />

                
            </Panel>
            <Panel id="TalentNodeList">
                

            </Panel>
        </Panel>
	</Panel>
</root>