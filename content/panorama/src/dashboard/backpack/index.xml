<root>
	<styles>
		<include src="./styles.less" />
		<include src="./../../_styles/styles.less" />
	</styles>
	<scripts>
		<include src="./script.tsx" />
	</scripts>
    <snippets>
        <snippet name="CardNavRadioButton">
            <RadioButton group="CardNavRadioButton" text="{s:button_txt}"/>
        </snippet>

        <snippet name="BackpackItem">
            <Panel class="BackpackItem">
                <Panel class="Selected" hittest="false" />
                <Panel id="ServerItem" />
                <Image id="ServerItemImage"/>
                <Label class="ItemName" text="{s:item_name}"/>
            </Panel>
        </snippet>

        
    </snippets>
    <Panel class="DashBoardPanel">
        <Panel class="BoardContainer">
            <Panel class="BoardHeader">
                <Panel class="BoardTypeImage backpack" />
                <Button id="DashboardClosedBtn" class="ClosedBtn" />
            </Panel>
            <Panel class="BoardContent">
                <Panel id="NavButtonList" class="NavButtonGroupHor" />
                <Panel id="ContentFrame" class="ContentFrame">
                    <Panel id="BackpackItemList" />
                    <Panel id="ItemDetails">
                        <Panel class="Header">
                            <Label text="道具信息"/>
                        </Panel>
                       
                        <Panel class="ItemContainer">
                            <Panel class="NameAndAmount">
                                <Panel id="Component_ItemName" />
                                <Label class="Title" text="数量" />
                                <Label class="Amount" text="{d:item_amount}"/>
                            </Panel>
                            <Panel id="ItemComponent"/>
                        </Panel>
                       
                        <Panel class="SplitLine"/>
                        <Panel class="Desc">
                            <Label text="{s:item_desc}" html="true"/>
                        </Panel>

                        <Panel class="Footer">
                            <Panel class="UseBackpackItem">
                                <TextEntry id="UseBackpackCount" maxchars="2" textmode="numeric"/>
                                <Button id="UseBackpackItemBtn" class="dashboard_btn green">
                                <Label text="使用"/>
                            </Button>
                            </Panel>
                            

                            <Button id="UpdateBackpackBtn" class="dashboard_btn red">
                                <Label text="更新背包"/>
                            </Button>
                        </Panel>
                    </Panel>
                </Panel>
            </Panel>

        </Panel>
    </Panel>
</root>