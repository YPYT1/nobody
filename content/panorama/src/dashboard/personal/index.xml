<root>
	<styles>
		<include src="./styles.less" />
		<include src="./../../_styles/styles.less" />
	</styles>
	<scripts>
		<include src="./script.tsx" />
	</scripts>
	<snippets>
        <snippet name="NavRadioButton">
            <RadioButton group="PersonalNavRadioButton" text="{s:button_txt}">
                <Panel class="Icon"/>
            </RadioButton>
        </snippet>
	</snippets>
	<Panel class="DashBoardPanel">
		<Panel class="BoardContainer">
            <Panel class="BoardHeader">
                <Panel class="BoardTypeImage personal"/>
                <Button id="DashboardClosedBtn" class="ClosedBtn" />
            </Panel>
			
			
            <Panel class="BoardContent LeftNav">
                <Panel id="NavButtonList" class="NavButtonGroupVert" />
				<Panel class="RightBoardContent">
					<Panel class="ContentHeader">
						<Panel class="LocalPlayerProfile">
							<DOTAAvatarImage id="AvatarImage" steamid="local" showtooltip="false"/>
							<Panel class="NameAndLevel">
								<Panel class="AboutLabel">
									<DOTAUserName id="UserName" steamid="local" showtooltip="false"/>
									<Label class="Level" text="Lv.{d:level}"/>
								</Panel>
								<ProgressBar id='PlayerExp' value="50" min="0" max="100">
									<Label text="{d:exp} / {d:up_exp}"/>
								</ProgressBar>
							</Panel>
						</Panel>
					</Panel>
					<Panel id="ContentFrame" class="ContentFrame">

					</Panel>
				</Panel>
               
            </Panel>
        </Panel>
        <Button id="Personal_PopupsBg" class="PopupsBackground">

        </Button>
	</Panel>
</root>