<root>
	<styles>
		<include src="./../../../_styles/styles.less" />
		<include src="./../../styles.less" />
		<include src="./../styles.less" />
        <include src="./styles.less" />
	</styles>
	<scripts>
		<include src="./script.tsx" />
	</scripts>

    <snippets>
        <snippet name="EquipStoneRows">
            <Panel class="EquipStoneRows">
                <Panel class="EquipBorder">
                    <Panel class="EquipIcon" />
                </Panel>
                <Label class="LevelLabel" text="Lv.{d:level}"/>
            </Panel>
        </snippet>

        <snippet name="SoulEquipBorder">
            <RadioButton class="SoulEquipBorder">
                <Panel class="Left">
                    <Panel class="Border">
                        <Panel class="EquipIcon"/>
                    </Panel>
                </Panel>
                <Panel class="Right">
                    <Label class="Name" text="{s:slot_name}"/>
                    <Label class="Desc" text="魂石总等级：{d:ss_level}"/>
                </Panel>
            </RadioButton>
        </snippet>

        <snippet name="SSAttributeRows">
            <Panel class="SSAttributeRows">
                <Panel class="AttrAndLevel">
                    <Label class="Name" text="{s:attr_name}" />
                </Panel>
                
                <Panel class="AttributeValue">
                    <Label text="{s:attr_value}" />
                    <Panel class="Upper" />
                    <Panel class="Max" />
                </Panel>
            </Panel>
        </snippet>

        <snippet name="SelectAttrRows">
            <Panel class="SelectAttrRows">
                <Label class="Name" text="{s:attr_name}"/>
                <Label class="Value" text="{s:attr_value}" />
            </Panel>
        </snippet>
        <snippet name="BaseStoneBtn">
            <Panel class="BaseStoneBtn">
                <Label class="Name" text="{s:item_name}"/>
                <Label class="Attr" text="{s:attr}"/>
            </Panel>
        </snippet>
    </snippets>
    <Panel class="nav_content stone">
        <Panel class="Container">
            <Panel class="HeroBg"/>
            <Panel id="EquipStoneList" />
            <Panel class="StoneAttribute">
                <Label class="Title" text="当前魂石属性" />

                <Panel class="SplitLine" />
                <Panel id="AttributeList" />
                <Panel class="SplitLine" />

                <Panel class="Footer">
                    <Button id="StoneInlayBtn" class="dashboard_btn">
                        <Label text="魂石镶嵌"/>
                    </Button>
                    <Label class="InlayTips" text="点击魂石镶嵌按钮，进入魂石镶嵌界面"/>
                </Panel>
            </Panel>
        </Panel>
        
        <Panel id="StonePopups" />   
    </Panel>
</root>