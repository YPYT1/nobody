<root>
	<styles>
		<include src="./../../../_styles/styles.less" />
		<include src="./../../styles.less" />
		<include src="./../styles.less" />
        <include src="./styles.less" />
	</styles>
	<scripts>
		<include src="./script.tsx" />
	</scripts>

    <snippets>
        <snippet name="EquipStoneRows">
            <Panel class="EquipStoneRows">
                <Panel class="EquipBorder">
                    <Panel class="EquipIcon" />
                </Panel>
                <Label class="LevelLabel" text="Lv.{d:level}"/>
            </Panel>
        </snippet>

        <snippet name="SoulEquipBorder">
            <RadioButton class="SoulEquipBorder">
                <Panel class="Left">
                    <Panel class="Border">
                        <Panel class="EquipIcon"/>
                    </Panel>
                </Panel>
                <Panel class="Right">
                    <Label class="Name" text="{s:slot_name}"/>
                    <Label class="Desc" text="魂石总等级：{d:ss_level}"/>
                </Panel>
            </RadioButton>
        </snippet>

        <snippet name="SSAttributeRows">
            <Panel class="SSAttributeRows">
                <Panel class="AttrAndLevel">
                    <Label class="Name" text="{s:attr_name}" />
                </Panel>
                
                <Panel class="AttributeValue">
                    <Label text="{s:attr_value}" />
                    <Panel class="Upper" />
                    <Panel class="Max" />
                </Panel>
            </Panel>
        </snippet>

        <snippet name="SelectAttrRows">
            <Panel class="SelectAttrRows">
                <Label class="Name" text="{s:attr_name}"/>
                <Label class="Value" text="{s:attr_value}" />
            </Panel>
        </snippet>
        <snippet name="BaseStoneBtn">
            <Panel class="BaseStoneBtn">
                <Label class="Name" text="{s:item_name}"/>
                <Label class="Attr" text="{s:attr}"/>
            </Panel>
        </snippet>
    </snippets>
    <Panel class="nav_content stone">
        <Panel class="Container">
            <Panel class="HeroBg"/>
            <Panel id="EquipStoneList" />
            <Panel class="StoneAttribute">
                <Label class="Title" text="当前魂石属性" />

                <Panel class="SplitLine" />
                <Panel id="AttributeList" />
                <Panel class="SplitLine" />

                <Panel class="Footer">
                    <Button id="StoneInlayBtn" class="dashboard_btn">
                        <Label text="魂石镶嵌"/>
                    </Button>

                    <Label class="InlayTips" text="点击魂石镶嵌按钮，进入魂石镶嵌界面"/>
                </Panel>
            </Panel>
        </Panel>
        <Panel id="StonePopups" class="PopupsBackground">
            <Panel class="SoulStonePopups">
                <Panel class="Header">
                    <Panel class="Title"/>
                    <Button id="ClosedBtn" />
                </Panel>
                <Panel  class="SoulStoneContent">
                    <Panel id="SoulEquipList" />

                    <Panel class="StrengthenSlot">
                        <Panel id="SelectEquipIcon" />
                    </Panel>

                    <Panel class="SSAttributeBorder">
                        <Panel class="Header">
                            <Label class="Title" text="魂石属性"/>
                        </Panel>
                        <Panel id="SSAttributeList" />
                        <Panel id="TempAddSSAttr"/>
                    </Panel>

                    
                    <Panel id="EquipAboutAttribute">
                        <Panel class="SelectSSContent">
                            <Panel class="Header">
                                <Label text="属性升级"/>
                            </Panel>
                            <Panel id="SelectSSAttributeList" />
                            <Button id="AddSSBtn">
                                <Panel class="LabelAndIcon" text="添加属性" />
                            </Button>
                        </Panel>
                        <Panel class="SSOptionContainer">
                            <Panel class="OptionRadioBtnList">
                                <RadioButton id="SSAttrRadioDown" class="SSAttrRadioBtn" group="SSAttrRadioGroup" check="true">
                                    <Label text="属性降级"/>
                                </RadioButton>
                                <RadioButton id="SSAttrRadioUpper" class="SSAttrRadioBtn" group="SSAttrRadioGroup">
                                    <Label text="属性附加"/>
                                </RadioButton>
                            </Panel>
                            <Panel id="OptionAttributreContainer" class="Down">
                                <Panel id="OptionAttributreDown" class="OptionAttributre Down">
                                    <Panel id="AttributreDownList" class="AttributeList" />
                                    <Panel class="ButtonGroup">
                                        <Button id="SSDownBtn" class="dashboard_btn">
                                            <Label text="确定降级"/>
                                        </Button>
                                        <Button id="SSDelBtn" class="dashboard_btn red">
                                            <Label text="删除魂石"/>
                                        </Button>
                                    </Panel>
                                </Panel>
                                <Panel id="OptionAttributreUpper" class="OptionAttributre Upper">
                                    <Panel id="AttributreUpperList" class="AttributeList" />
                                    <Panel class="ButtonGroup">
                                        <Button id="SSUpperBtn" class="dashboard_btn">
                                            <Label text="升级"/>
                                        </Button>
                                    </Panel>
                                </Panel>
                            </Panel>
                        </Panel>
                        <Panel id="SoulStoneOptionList">
                            <Panel class="OptionRow AddStone">
                                <Button id="AddStone_BtnConfirm" class="dashboard_btn">
                                    <Label text="确认"/>
                                </Button>
                            </Panel>
                            
                        </Panel>
                    </Panel>
                    
                </Panel>
            </Panel>
            <Panel id="AddStoneMenu" >
                <Panel class="Header">
                    <Label text="可镶嵌魂石属性"/>
                </Panel>
                <Panel id="AddStoneList"/>
            </Panel>
            <Button id="AddStone_ConfirmPopups" class="ConfirmPopupContainer">
                <Panel class="ConfirmPopup">
                    <Panel class="ServerItemContanier">
                        <Panel class="ServerItemBorder">
                            <Panel id="AddStone_CostItemList" class="ServerItem" />
                            <Panel class="CostItemNum">
                                <Panel class="CostLabel">
                                    <Label class="Owned" text="{d:owned_count}  "/>
                                    <Label class="Need" text="/ {d:need_count}"/>
                                </Panel>
                                
                            </Panel>
                        </Panel>
                        <Label class="SuccessLabel"  text="成功率: {d:success}%"/>
                        <Panel class="ServerItemBorder ExtendItem">
                            <Panel id="AddStone_ExtendCostItem" class="ServerItem"/>
                            <Panel class="CostItemNum">
                                <Label text="{d:ex_owned_count} / {d:ex_need_count}"/>
                            </Panel>
                        </Panel>
                    </Panel>
                    
                    <Panel class="UpperPriceCost">
                        <Panel class="CostPanel">
                            <Panel class="PriceIcon" />
                            <Label class="PriceCount" text="{d:cost_count}"/>
                        </Panel>
                    </Panel>
                    

                
                    <!-- <Panel class="ButtonGroup">
                        
                        <Button id="AddStone_BtnCancel" class="dashboard_btn red">
                            <Label text="取消"/>
                        </Button>
                    </Panel> -->
                </Panel>
            </Button>
        </Panel>
        
    </Panel>

</root>