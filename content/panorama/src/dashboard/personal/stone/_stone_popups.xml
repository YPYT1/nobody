<root>
	<styles>
        <include src="./../../../_styles/styles.less" />
		<include src="./../../styles.less" />
		<include src="./../styles.less" />
		<include src="./_stone_popups.less" />
	</styles>
	<scripts>
		<include src="./_stone_popups.tsx" />
	</scripts>
	<snippets>
        <snippet name="SoulEquipBorder">
            <RadioButton class="SoulEquipBorder">
                <Panel class="Left">
                    <Panel class="Border">
                        <Panel class="EquipIcon"/>
                    </Panel>
                </Panel>
                <Panel class="Right">
                    <Label class="Name" text="{s:slot_name}"/>
                    <Label class="Desc" text="当前总等级：{d:ss_level}"/>
                    <Label class="HistoryLevel" text="历史总等级: {d:history_level}"/>
                </Panel>
            </RadioButton>
        </snippet>

        <snippet name="ItemStoneAttrRows">
            <Panel class="ItemStoneAttrRows">
                <Panel class="LockState">
                    <Panel class="LockIcon"/>
                    <Label class="LockLabel" text="{s:lock_state}"/>
                    <Label class="unLockLabel" text="已解锁"/>
                </Panel>
                <Panel class="AttrState">
                    <Label class="Name" text="{s:item_name}"/>
                    <Label class="Attr" text="{s:attr}"/>
                    <Panel class="State">
                        <Panel class="StateUpper"/>
                        <Panel class="StateDown"/>
                        <Panel class="StateMax"/>
                    </Panel>
                    <Button id="DeleteStoneBtn" />
                </Panel>
                
            </Panel>
        </snippet>

        <snippet name="CostPanel">
            <Panel class="CostPanel">
                <Panel class="CenterContent">
                    <Panel id="PriceIcon" />
                    <Label class="PriceCount" text="{d:cost_count}"/>
                </Panel>
                
            </Panel>
        </snippet>
	</snippets>

	<Panel class="PopupsBackground">
        <Panel class="Container">
            <Panel class="Header">
                <Panel class="Title"/>
                <Button id="ClosedBtn" />
            </Panel>
            <Panel  class="Content">
                <Panel id="SoulEquipList">

                </Panel>

                <Panel class="StrengthenSlot">
                    <Panel id="SelectEquipIcon" />
                </Panel>

                <Panel class="SSAttributeBorder">
                    <Panel class="Header">
                        <Label class="Title" text="魂石属性"/>
                    </Panel>
                    <Panel id="SSAttributeList" />
                </Panel>

                <Panel id="SSActionResults">
                    <Panel class="ServerItemContanier">
                        <Panel class="ServerItemBorder">
                            <Panel id="ResultsBaseCostItem" class="ServerItemPanel" />
                            <Panel class="CostItemNum" hittest="false">
                                <Panel class="CostLabel" hittest="false">
                                    <Label class="Owned" text="{d:owned_count}" hittest="false"/>
                                    <Label class="Need" text="/ {d:need_count}" hittest="false"/>
                                </Panel>
                                
                            </Panel>
                        </Panel>
                        <Label class="SuccessLabel"  text="成功率: {d:success}%"/>
                        <Panel class="ServerItemBorder ExtendItem">
                            <Panel id="ResultsExtendCostItem" class="ServerItemPanel">
                                <Panel id="ResultsExtendItem" class="ServerItem" />
                                <Button id="AddExtendItemBtn" />
                                <Button id="DeleteExtendItemBtn" />
                            </Panel>
                        </Panel>
                    </Panel>
                    <Panel id="ActionCostItemList" class="UpperPriceCost" />
                </Panel>

                

                <Panel class="SelectSSContent">
                    <Panel class="Header">
                        <Label text="属性升级"/>
                    </Panel>
                    <Panel id="AttributreUpperList" />
                </Panel>

                <Panel class="SSOptionContainer">
                    <Panel class="OptionRadioBtnList">
                        <RadioButton id="SSAttrRadioDown" class="SSAttrRadioBtn" group="SSAttrRadioGroup" check="true">
                            <Label text="属性降级"/>
                        </RadioButton>
                        <RadioButton id="SSAttrRadioAdd" class="SSAttrRadioBtn" group="SSAttrRadioGroup">
                            <Label text="属性附加"/>
                        </RadioButton>
                    </Panel>
                    <Panel id="OptionAttributreContainer" class="Down">
                        <Panel id="OptionAttributreDown" class="OptionAttributre Down">
                            <Panel id="AttributreDownList" class="SoulStoneList" />
                        </Panel>
                        <Panel id="OptionAttributreAdd" class="OptionAttributre Add">
                            <Panel id="AttributreAddList" class="SoulStoneList" />
                        </Panel>
                    </Panel>
                    <Panel class="ConfirmBtnGroup">
                        <Button id="PopupsOptionConfirmBtn" class="dashboard_btn">
                            <Label text="确认"/>
                        </Button>

                        <Button id="PopupsOptionDeltetBtn" class="dashboard_btn red">
                            <Label text="删除魂石"/>
                        </Button>
                    </Panel>
                    
                </Panel>

                
            </Panel>
        </Panel>

        <Button id="ExtendCostItemList">
            <Panel class="ExtendContainer">
                <Panel id="ShowExtendItemList">

                </Panel>
            </Panel>
        </Button>

        <Button id="DeltetSoulStonePopups">
            <Panel class="PopupContainer">
                <Label class="Title" text="是否删除该魂石属性"/>
                <Panel class="SSAttribute">
                    <Label class="Name" text="{s:popup_ss_name}"/>
                    <Label class="Attr" text="{s:popup_ss_attr}"/>
                </Panel>
                <Panel id="DeleteGiveItemList" />
                <Panel class="GiveRatioLabel">
                    <Label class="Name" text="返还率:"/>
                    <Label class="Attr" text="{d:give_ratio}%"/>
                </Panel>
                <Panel class="ButtonGroup">
                    <Button id="DeltetConfirmBtn" class="dashboard_btn">
                        <Label text="确认"/>
                    </Button>

                    <Button id="DeltetCancelBtn" class="dashboard_btn red">
                        <Label text="取消"/>
                    </Button>
                </Panel>
            </Panel>
        </Button>
    </Panel>
</root>