<root>
    <scripts>
        <include src="./script.tsx" />
    </scripts>
    <styles>
        <include src="./../../_styles/keyframes.less" />
        <include src="./../../_styles/styles.less" />
        <include src="./styles.less" />
    </styles>
    <Panel class="tooltip_talent_tree">
        <Panel class="TooltipContent">
            <Panel class="TalentHeader">
                <Panel class="TalentLabels">
                    <Label class="TalentName" text="{s:talent_name}" antialias="true"/>
                    <Label class="TalentLevel" text="{d:level} / {d:max}"/>
                </Panel>
                <Panel class="TalentExtraInfo">
                    <Panel id="ExtraElement">
                        <Panel class="NewIcon" />
                    </Panel>
                    <Panel id="ExtraTypes">
                        <Label id="TypesLabel" class="TypeLabel" text="{s:type_label}"/>
                        <Panel class="NewIcon" />
                    </Panel>
                </Panel>
            </Panel>
            <Label class="TalentDesc" text="{s:talent_desc}" html="true" />
        </Panel>
    </Panel>
</root>